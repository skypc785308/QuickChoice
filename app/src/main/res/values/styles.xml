<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_light_green_300</item>
        <item name="colorPrimaryDark">@color/md_light_green_700</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#09adeb</item>
    </style>

    <style name="title_style" parent="android:Theme">
        <item name="android:windowTitleSize">26dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
